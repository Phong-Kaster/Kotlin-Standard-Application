<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="user1"
            type="com.example.kotlinstandardapplication.page.databindingpage.lession1getstart.User" />

        <variable
            name="user2"
            type="com.example.kotlinstandardapplication.page.databindingpage.lession1getstart.User" />

        <variable
            name="viewModel"
            type="com.example.kotlinstandardapplication.page.databindingpage.lession1getstart.DataBindViewModel" />
    </data>

    <ScrollView
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".page.databindingpage.lession1getstart.DataBindActivity">

            <TextView
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:text="Basic Binding Data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_marginVertical="20dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{user1.name}" />

            <TextView
                android:layout_marginVertical="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Integer.toString(user1.birthYear)}" />

            <TextView
                android:layout_marginVertical="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{user2.name}" />

            <TextView
                android:layout_marginVertical="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Integer.toString(user2.birthYear)}"/>


            <Button
                android:id="@+id/buttonChange"
                android:text="Basic Binding Data Button"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:text="Observable Binding Data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_marginVertical="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.user.name}" />

            <TextView
                android:layout_marginVertical="20dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Integer.toString(viewModel.user.birthYear)}" />

            <TextView
                android:layout_marginVertical="20dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.text}" />

            <Button
                android:id="@+id/buttonObservable"
                android:text="Observable Button"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>


</layout>
